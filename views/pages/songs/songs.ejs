<!DOCTYPE html>
<html>
	<head>
		<%- include("../../partials/head", { title: title }); %>
	</head>
	<body>
		<%- include("../../partials/header"); %>
    <div class="container">
			<h1><%= title %></h1>
      
      <div class="clearfix">
        <a href="/mass/songs/new" class="btn btn-primary float-right">Ajouter un chant</a>
      </div>
      <br />

      <% if (flashType === "success" && flashMessage) { %>
      <div role="alert" class="alert alert-success"><%= flashMessage %></div>
      <% } %>

		  <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for (const { id, title } of songs) { %>
          <tr>
            <th scope="row"><%= id %></th>
            <td><%= title %></td>
            <td>
              <a href="/mass/songs/<%= id %>" class="detailLink float-right">
                Examiner
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <style>
      .detailLink {
        visibility: hidden;
      }

      tr:hover .detailLink {
        visibility: visible;
      }
    </style>
	</body>
</html>