<!DOCTYPE html>
<html>
	<head>
		<%- include("../../partials/head", { title: title }); %>
	</head>
	<body>
		<%- include("../../partials/header"); %>
		<div class="container">
			<h1><%= title %></h1>
			
			<div class="clearfix">
				<a href="/mass/universal-prayers/new" class="btn btn-primary float-right">
					Ajouter une pri√®re universelle
				</a>
			</div>
			<br />

			<% if (flashType === "success" && flashMessage) { %>
			<div role="alert" class="alert alert-success"><%= flashMessage %></div>
			<% } %>

			<table class="table table-hover" id="universalPrayersTable">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Refrain</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% for (const { id, chorus } of universalPrayers) { %>
					<tr>
						<th scope="row"><%= id %></th>
						<td><%= chorus %></td>
						<td>
							<a href="/mass/universal-prayers/<%= id %>" class="detailLink float-right">
								Examiner
							</a>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<script>
      $(() => {
        $("#universalPrayersTable").DataTable();
      });
    </script>
		<style>
			.detailLink {
				visibility: hidden;
			}

			tr:hover .detailLink {
				visibility: visible;
			}
		</style>
	</body>
</html>